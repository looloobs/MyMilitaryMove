<h1>Listing orders</h1>

<table>
  <tr>
    <th>Card</th>
    <th>Ip address</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Card type</th>
    <th>Card expires on</th>
    <th>Address1</th>
    <th>Address2</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Country</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%=h order.card_id %></td>
    <td><%=h order.ip_address %></td>
    <td><%=h order.first_name %></td>
    <td><%=h order.last_name %></td>
    <td><%=h order.card_type %></td>
    <td><%=h order.card_expires_on %></td>
    <td><%=h order.address1 %></td>
    <td><%=h order.address2 %></td>
    <td><%=h order.city %></td>
    <td><%=h order.state %></td>
    <td><%=h order.zip %></td>
    <td><%=h order.country %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New order', new_order_path %>