<h1>Listing tasks</h1>

<table>
  <tr>
    <th>List</th>
    <th>Task</th>
    <th>Completed</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.list_id %></td>
    <td><%=h task.task %></td>
    <td><%=h task.completed %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>